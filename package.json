{
	"name": "@triplett/steward",
	"version": "2.0.1",
	"description": "Quick view server setup using @triplett/stew.",
	"author": "triplett",
	"license": "MIT",
	"main": "dist/steward.min.js",
	"module": "dist/steward.min.mjs",
	"scripts": {
		"test": "jest --watch",
		"build": "rimraf dist && esbuild src/main.js --outfile=dist/steward.min.js --external:@triplett/stew --platform=node --bundle --minify --banner:js=//@triplett/steward@v2.1.0 --legal-comments=linked && esbuild src/module.js --outfile=dist/steward.min.mjs --external:@triplett/stew --platform=node --format=esm --bundle --minify --banner:js=//@triplett/steward@v2.1.0 --legal-comments=linked",
		"start": "node preview/server.js"
	},
	"keywords": [
		"server",
		"routing",
		"stew"
	],
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/codetriplett/steward.git"
	},
	"bugs": {
		"url": "https://github.com/codetriplett/steward/issues"
	},
	"homepage": "https://github.com/codetriplett/steward#readme",
	"jest": {
		"testEnvironmentOptions": {
			"url": "http://localhost"
		},
		"setupFilesAfterEnv": [
			"./setupTests.js"
		]
	},
	"devDependencies": {
		"@babel/preset-env": "7.21.4",
		"@triplett/stew": "^3.2.2",
		"esbuild": "0.17.15",
		"jest": "29.5.0",
		"regenerator-runtime": "0.13.11",
		"rimraf": "4.4.1"
	}
}
